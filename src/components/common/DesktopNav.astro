---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => {
	if (path === '/' && currentPath === '/') return true;
	if (path !== '/' && currentPath.startsWith(path)) return true;
	return false;
};

const navLinks = [
	{ href: '/', label: 'Home' },
	{ href: '/about', label: 'About' },
	{ href: '/destinations', label: 'Destinations' },
	{ href: '/services', label: 'Services' },
	{ href: '/contact', label: 'Contact' }
];
---

<nav class="hidden md:flex items-center gap-8">
	{navLinks.map(link => (
		<a 
			href={link.href} 
			class={`text-base font-semibold transition-all duration-300 relative pb-1 ${isActive(link.href) ? 'text-accent after:w-full' : 'text-slate-700 hover:text-accent'} after:absolute after:bottom-0 after:left-0 after:h-0.5 after:bg-accent after:transition-all after:duration-300 hover:after:w-full`}
		>
			{link.label}
		</a>
	))}
</nav>
