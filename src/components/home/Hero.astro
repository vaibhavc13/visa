<section class="relative min-h-[500px] md:h-[80vh] md:min-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2000&auto=format&fit=crop" 
      alt="Travel Background" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-primary/40 mix-blend-multiply"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-primary/90 via-transparent to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 py-12 md:py-0 text-center text-white space-y-6 max-w-4xl">
    <span class="inline-block py-2 px-4 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-semibold tracking-widest uppercase mb-4 animate-fade-in-up">
      Your Route To Adventure
    </span>
    <h1 class="text-6xl md:text-7xl lg:text-8xl font-display font-bold tracking-tighter leading-none drop-shadow-2xl mb-6">
      Explore The World <br/>
      <span class="bg-gradient-to-r from-accent via-accent-light to-accent bg-clip-text text-transparent">With Confidence</span>
    </h1>
    <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed font-medium drop-shadow-lg">
      We create personalized travel experiences in India and internationally, 
      ensuring smooth and memorable journeys tailored to your needs.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
      <a href="/destinations" class="px-8 py-4 bg-accent text-white font-bold rounded-full hover:bg-accent-light transition-all transform hover:scale-105 shadow-xl">
        Explore Packages
      </a>
      <a href="/contact" class="px-8 py-4 bg-white/10 backdrop-blur-md border border-white/30 text-white font-bold rounded-full hover:bg-white/20 transition-all">
        Plan Your Trip
      </a>
    </div>
  </div>
</section>
