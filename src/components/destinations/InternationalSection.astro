---
import { ArrowRight } from 'lucide-react';
import DestinationCard from './DestinationCard.astro';

const internationalDestinations = [
  { title: "Singapore", image: "/assets/images/singapore-YleQrkzWxDc51KOa.png", desc: "Experience the Lion City's vibrant culture.", link: "#" },
  { title: "Thailand", image: "/assets/images/thailand-Yg2yD4Dy2GTBLQDP.png", desc: "The Land of Smiles awaits with stunning beaches.", link: "#" },
  { title: "Vietnam", image: "/assets/images/vietnam-YZ9jJEgpMwU95DPG.png", desc: "Discover breathtaking landscapes and delicious crusine.", link: "#" },
  { title: "Bali", image: "/assets/images/exotic-bali---may-2025.pdf-d954aPa0GeFK9Zbw.png", desc: "Escape to the Island of the Gods for peace.", link: "#" },
  { title: "Azerbaijan", image: "/assets/images/azerbaijan-mjEGaZ1yZXTKWyK9.png", desc: "Where East meets West - explore the Land of Fire.", link: "#" },
  { title: "Malaysia", image: "/assets/images/malaysia-langkawi-4n5d-YbNJK42PNbTzqzEV.png", desc: "Truly Asia - from bustling cities to rainforests.", link: "#" },
  { title: "Dubai", image: "/assets/images/dubai-m2WEDNp7K3uDVQGJ.png", desc: "The City of Gold - luxury, shopping, and ultramodern.", link: "#" },
  { title: "Phuket", image: "/assets/images/option-1---trip-to-phuket-.pdf-YX4xk8BoyMS53qWz.png", desc: "Thailand's largest island, famous for its beaches.", link: "#" }
];
---

<section class="py-20 bg-slate-50">
  <div class="container mx-auto px-4">
    <div class="mb-12 text-center md:text-left">
      <h2 class="text-3xl font-heading font-bold text-primary flex items-center justify-center md:justify-start gap-3">
         <span class="w-2 h-12 bg-accent rounded-full block"></span>
         International Packages
      </h2>
      <p class="text-slate-600 mt-2 ml-5">Discover the world beyond borders.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {internationalDestinations.map(dest => (
        <DestinationCard 
          title={dest.title} 
          image={dest.image} 
          desc={dest.desc} 
          link={dest.link} 
          layout="grid" 
        />
      ))}
    </div>
  </div>
</section>
