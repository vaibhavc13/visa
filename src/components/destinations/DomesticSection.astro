---
import { ArrowRight } from 'lucide-react';
import DestinationCard from './DestinationCard.astro';

const domesticDestinations = [
  { title: "Kullu Manali", image: "/assets/images/kullu-manali-mk3JpGL27qs9qEqO.png", desc: "Breathtaking views and adventure in the Himalayas.", link: "#" },
  { title: "Kashmir", image: "/assets/images/kashmir-tulip-package-1-YanJkZKO5Wh98lln.png", desc: "Paradise on Earth - snow-capped mountains.", link: "#" },
  { title: "Rajasthan", image: "/assets/images/rajasthan-Yg2yrXZGDLuMwNvQ.jpg", desc: "The Land of Kings - palaces, deserts, and culture.", link: "#" },
  { title: "Goa", image: "/assets/images/goa-mk3Jrx68r3iVoaM4.jpg", desc: "Sun, sand, and sea - the perfect beach getaway.", link: "#" },
  { title: "Hyderabad", image: "/assets/images/hyderabad-3-Aq2JpbvevqTzbpnj.png", desc: "The City of Pearls - a blend of history and modernity.", link: "#" }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="mb-12 text-center md:text-left">
       <h2 class="text-3xl font-heading font-bold text-primary flex items-center justify-center md:justify-start gap-3">
         <span class="w-2 h-12 bg-secondary rounded-full block"></span>
         Domestic Packages
      </h2>
      <p class="text-slate-600 mt-2 ml-5">Incredible India awaits you.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {domesticDestinations.map(dest => (
        <DestinationCard 
          title={dest.title} 
          image={dest.image} 
          desc={dest.desc} 
          link={dest.link} 
          layout="large" 
        />
      ))}
    </div>
  </div>
</section>
